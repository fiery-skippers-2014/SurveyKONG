
<h2><a href="/survey/<%= current_user.id %>/new">Create Survey</a></h2>
<h3>Complete a survey:</h3>
<ol>


  <% all_surveys.each do |survey| %>
  <li><a href="/survey/<%= survey.id %>/user/<%= current_user.id %>"><%= survey.title %></a></li>
  <% end %>
</ol>

<h3>Surveys you created :</h3>
<ol>
  <% current_user.surveys.each do |survey| %>
    <li><%= survey.title %> <%= survey.description %></li>
    <div class = "results">
      <form action="/viewresults" method="post">
        <button id='<%=survey.id%>' type="submit">Results</button>
      </form>
    </div>
  <%end%>
</ol>
